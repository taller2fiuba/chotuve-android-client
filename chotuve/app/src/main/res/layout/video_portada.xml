<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/cargando_barra_progreso"
        android:layout_width="112dp"
        android:layout_height="73dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/portada"
        app:layout_constraintEnd_toEndOf="@+id/portada"
        app:layout_constraintStart_toStartOf="@+id/portada"
        app:layout_constraintTop_toTopOf="@+id/portada" />

    <ImageView
        android:id="@+id/portada"
        android:layout_width="0dp"
        android:layout_height="225dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/duracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.8"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Overline"
        android:textColor="@color/colorOnPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/portada"
        app:layout_constraintEnd_toEndOf="@+id/portada"
        tools:text="00:20" />

</androidx.constraintlayout.widget.ConstraintLayout>